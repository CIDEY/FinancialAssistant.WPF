<Window x:Class="FinancialAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FinanceGuard - Authorization"
        Width="1000"
        Height="650"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Стили для кнопок управления окном -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="Background" 
                                   Fill="{TemplateBinding Background}"
                                   Stroke="Transparent"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="Fill" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#1F2937"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25 12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15"
                                    Opacity="0.2"
                                    ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        
        
        <!-- Основной контейнер с тенью -->
        <Border Margin="20"
                Background="White"
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30"
                                Opacity="0.1"
                                ShadowDepth="5"
                                Color="Black"/>
            </Border.Effect>

            <Grid>
                <!-- Панель управления окном -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="10">
                    <Button Style="{StaticResource WindowControlButton}"
                          Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close"
                                                Width="20"
                                                Height="20"/>
                    </Button>
                </StackPanel>

                <!-- Основное содержимое -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая панель -->
                    <Border Grid.Column="0"
                          Width="350"
                          Background="#6366F1"
                          CornerRadius="20 0 0 20">
                        <Grid>
                            <Path Data="M100,0 L0,200 200,200"
                                Fill="#4F46E5"
                                Opacity="0.1"
                                Stretch="UniformToFill"/>

                            <StackPanel Margin="40"
                                      VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Finance"
                                                        Width="80"
                                                        Height="80"
                                                        HorizontalAlignment="Center"
                                                        Margin="0,0,0,20"
                                                        Foreground="White"/>

                                <TextBlock Text="FinanceGuard"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,0,0,10"
                                           TextAlignment="Center"/>

                                <TextBlock Text="Take control of your finances"
                                           FontSize="18"
                                           Foreground="#EEF2FF"
                                           Opacity="0.9"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Правая панель с формой -->
                    <StackPanel Grid.Column="1"
                              Margin="60,40"
                              VerticalAlignment="Center">
                        <TextBlock Text="Welcome Back"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,40"/>

                        <!-- Поле Email -->
                        <TextBox materialDesign:HintAssist.Hint="Email address"
                               FontSize="16"
                               Margin="0,0,0,25"
                               Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                            <TextBox.Text>
                                <Binding Path="Email" UpdateSourceTrigger="PropertyChanged"/>
                            </TextBox.Text>
                        </TextBox>

                        <!-- Поле Password -->
                        <PasswordBox materialDesign:HintAssist.Hint="Password"
                                   FontSize="16"
                                   Margin="0,0,0,35"
                                   Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                            <PasswordBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                            </PasswordBox.InputBindings>
                        </PasswordBox>

                        <!-- Кнопка входа -->
                        <Button Content="Sign In"
                               Height="50"
                               Background="#6366F1"
                               FontSize="16"
                               Cursor="Hand"
                               Command="{Binding LoginCommand}">
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="Button.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2"
                                                          To="#4F46E5"
                                                          Storyboard.TargetProperty="Background.Color"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>

                        <!-- Социальные кнопки -->
                        <StackPanel Orientation="Horizontal"
                                  HorizontalAlignment="Center"
                                  Margin="0,30,0,25">
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                  Width="40"
                                  Height="40"
                                  Margin="0,0,15,0">
                                <materialDesign:PackIcon Kind="Google" Width="24" Height="24"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                  Width="40"
                                  Height="40"
                                  Margin="15,0">
                                <materialDesign:PackIcon Kind="Apple" Width="24" Height="24"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                  Width="40"
                                  Height="40"
                                  Margin="15,0,0,0">
                                <materialDesign:PackIcon Kind="Microsoft" Width="24" Height="24"/>
                            </Button>
                        </StackPanel>

                        <!-- Ссылка на регистрацию -->
                        <TextBlock HorizontalAlignment="Center">
                            <Run Text="New to FinanceGuard? "/>
                            <Hyperlink Foreground="#6366F1"
                                     Command="{Binding SwitchToRegisterCommand}"
                                     TextDecorations="None"
                                     FontWeight="SemiBold">
                                Create Account
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>