<Page
    x:Class="FinancialAssistant.Pages.AccountsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FinancialAssistant.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FinancialAssistant.ViewModels"
    Title="AccountsView"
    d:DataContext="{d:DesignInstance Type=vm:AccountsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Панель управления  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Command="{Binding AddAccountCommand}"
                Content="Добавить счет"
                Style="{StaticResource MaterialDesignRaisedButton}" />

            <Button
                Margin="0,0,10,0"
                Command="{Binding EditAccountCommand}"
                Content="Редактировать"
                IsEnabled="{Binding IsAccountSelected}"
                Style="{StaticResource MaterialDesignOutlinedButton}" />

            <Button
                Command="{Binding DeleteAccountCommand}"
                Content="Удалить"
                IsEnabled="{Binding IsAccountSelected}"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>

        <!--  Список счетов  -->
        <Border
            Grid.Row="1"
            Padding="15"
            Background="White"
            CornerRadius="15"
            Effect="{StaticResource MaterialDesignShadowDepth2}">

            <ListView
                BorderThickness="0"
                ItemsSource="{Binding Accounts}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectedItem="{Binding SelectedAccount}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,5"
                            Padding="20"
                            Background="#F8FAFC"
                            CornerRadius="10">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Информация о счете  -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{Binding Name}" />

                                    <TextBlock
                                        Margin="0,5,0,0"
                                        Foreground="#6B7280"
                                        Text="{Binding Type}" />
                                </StackPanel>

                                <!--  Баланс  -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Text="{Binding Balance, StringFormat={}{0:N2}}" />

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="#6B7280"
                                        Text="{Binding Currency.Code}" />
                                </StackPanel>

                                <!--  Иконка  -->
                                <materialDesign:PackIcon
                                    Grid.Column="2"
                                    Width="24"
                                    Height="24"
                                    Margin="20,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="#3B82F6"
                                    Kind="{Binding AccountIcon}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>
