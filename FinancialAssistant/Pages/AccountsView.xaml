<UserControl
    x:Class="FinancialAssistant.Pages.AccountsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FinancialAssistant.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FinancialAssistant.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:AccountsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#F9FAFB"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="MaterialDesignToolBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MaterialDesignToolBarButtonBackground}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MaterialDesignToolBarButtonPressedBackground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Command="{Binding OpenAddAccountPopupCommand}"
                Content="Добавить счет"
                Style="{StaticResource MaterialDesignRaisedButton}" />

        </StackPanel>

        <Border
            Grid.Row="1"
            Padding="15"
            Background="White"
            CornerRadius="15"
            Effect="{StaticResource MaterialDesignShadowDepth2}">
            <ListView
                BorderThickness="0"
                ItemsSource="{Binding Accounts}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectedItem="{Binding SelectedAccount}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,8"
                            Padding="16"
                            materialDesign:ElevationAssist.Elevation="Dp2"
                            Background="White"
                            CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="#717171"
                                            Text="{Binding Type}" />
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            FontSize="12"
                                            Foreground="#717171"
                                            Text="{Binding Currency.Code}" />
                                    </StackPanel>

                                    <TextBlock
                                        Margin="20,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Text="{Binding Balance, StringFormat={}{0:N2}}" />
                                </StackPanel>

                                <StackPanel
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=DataContext.OpenEditAccountPopupCommand}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignToolBarButton}"
                                        ToolTip="Редактировать">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Foreground="#717171"
                                            Kind="Pencil" />
                                    </Button>
                                    <Button
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=DataContext.DeleteAccountCommand}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignToolBarButton}"
                                        ToolTip="Удалить">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Foreground="#FF5252"
                                            Kind="TrashCanOutline" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Rectangle
            x:Name="popupBackgroundOverlay"
            Grid.RowSpan="2"
            Fill="#33000000"
            Visibility="Collapsed" />

        <Popup
            x:Name="accountPopup"
            IsOpen="{Binding IsAccountPopupOpen, Mode=TwoWay}"
            Placement="Center"
            StaysOpen="False">
            <Border
                Padding="16"
                Background="White"
                BorderBrush="{StaticResource MaterialDesignDivider}"
                BorderThickness="1"
                CornerRadius="5">
                <ContentPresenter Content="{Binding AccountPopupContent}" />
            </Border>
        </Popup>
    </Grid>
</UserControl>