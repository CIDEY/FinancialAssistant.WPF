<UserControl
    x:Class="FinancialAssistant.Pages.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FinancialAssistant.Pages"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FinancialAssistant.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Финансовые показатели  -->
        <Grid Grid.Row="0" Margin="0,0,0,20">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <!--  Отступ  -->
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <!--  Отступ  -->
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <!--  Отступ  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Общий баланс  -->
            <Border
                Grid.Column="0"
                Padding="20"
                Background="White"
                CornerRadius="15"
                Effect="{StaticResource MaterialDesignShadowDepth2}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#6B7280"
                        Text="ОБЩИЙ БАЛАНС" />
                    <TextBlock
                        Margin="0,8,0,0"
                        FontSize="26"
                        FontWeight="Bold"
                        Text="{Binding TotalBalance, StringFormat={}{0:N2} ₽}" />
                </StackPanel>
            </Border>

            <!--  Доходы  -->
            <Border
                Grid.Column="2"
                Padding="20"
                Background="White"
                CornerRadius="15"
                Effect="{StaticResource MaterialDesignShadowDepth2}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#6B7280"
                        Text="ДОХОДЫ" />
                    <StackPanel
                        Margin="0,8,0,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="22"
                            Height="22"
                            Margin="0,0,6,0"
                            Foreground="#10B981"
                            Kind="ArrowTopRight" />
                        <TextBlock
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="#10B981"
                            Text="{Binding MonthlyIncome, StringFormat={}{0:N2} ₽}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Расходы  -->
            <Border
                Grid.Column="4"
                Padding="20"
                Background="White"
                CornerRadius="15"
                Effect="{StaticResource MaterialDesignShadowDepth2}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#6B7280"
                        Text="РАСХОДЫ" />
                    <StackPanel
                        Margin="0,8,0,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="22"
                            Height="22"
                            Margin="0,0,6,0"
                            Foreground="#EF4444"
                            Kind="ArrowBottomRight" />
                        <TextBlock
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="#EF4444"
                            Text="{Binding MonthlyExpense, StringFormat={}{0:N2} ₽}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Прибыль  -->
            <Border
                Grid.Column="6"
                Padding="20"
                Background="White"
                CornerRadius="15"
                Effect="{StaticResource MaterialDesignShadowDepth2}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#6B7280"
                        Text="ПРИБЫЛЬ" />
                    <StackPanel
                        Margin="0,8,0,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="22"
                            Height="22"
                            Margin="0,0,6,0"
                            Foreground="{Binding ProfitColor}"
                            Kind="{Binding ProfitIcon}" />
                        <TextBlock
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="{Binding ProfitColor}"
                            Text="{Binding NetProfit}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!--  График  -->
        <Border
            Grid.Row="1"
            Padding="15"
            Background="White"
            CornerRadius="15"
            Effect="{StaticResource MaterialDesignShadowDepth2}">
            <lvc:CartesianChart
                AnimationsSpeed="0:0:0.3"
                Hoverable="True"
                LegendLocation="Right"
                Series="{Binding SeriesCollection}">
                <lvc:CartesianChart.DataTooltip>
                    <lvc:DefaultTooltip SelectionMode="SharedYValues" />
                </lvc:CartesianChart.DataTooltip>

                <lvc:CartesianChart.AxisX>
                    <lvc:Axis
                        Title="Месяцы"
                        LabelFormatter="{Binding DateFormatter}"
                        Labels="{Binding Labels}" />
                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Сумма (руб)" LabelFormatter="{Binding CurrencyFormatter}" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>
    </Grid>
</UserControl>
