<UserControl
    x:Class="FinancialAssistant.Pages.TransactionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FinancialAssistant.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FinancialAssistant.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <StackPanel>
            <!--  Заголовок страницы  -->
            <TextBlock
                Margin="0,0,0,30"
                FontSize="32"
                FontWeight="Bold"
                Foreground="#1F2937"
                Text="Операции" />

            <!--  Список транзакций  -->
            <Border
                Padding="15"
                Background="White"
                CornerRadius="10">
                <ListView BorderThickness="0" ItemsSource="{Binding Transactions}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="150" Header="Дата">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="SemiBold" Text="Дата" />
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="Date" StringFormat="{}{0:dd.MM.yyyy}" />
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>

                            <GridViewColumn Width="120" Header="Сумма">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="SemiBold" Text="Сумма" />
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="Amount" StringFormat="{}{0:N2} ₽" />
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>

                            <GridViewColumn Width="200" Header="Категория">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="SemiBold" Text="Категория" />
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="Category" />
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>

                            <GridViewColumn Width="300" Header="Описание">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="SemiBold" Text="Описание" />
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.DisplayMemberBinding>
                                    <Binding Path="Description" />
                                </GridViewColumn.DisplayMemberBinding>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <!--  Стиль для элементов списка  -->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="10" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="BorderBrush" Value="#E5E7EB" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>

            <!--  Кнопка добавления  -->
            <Button
                Height="50"
                HorizontalAlignment="Left"
                Background="#6366F1"
                Command="{Binding AddTransactionCommand}"
                Cursor="Hand"
                Foreground="White"
                Style="{StaticResource MaterialDesignRaisedButton}">
                <Button.Effect>
                    <DropShadowEffect
                        BlurRadius="15"
                        Opacity="0.2"
                        ShadowDepth="3" />
                </Button.Effect>
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Kind="Plus" />
                        <TextBlock VerticalAlignment="Center" Text="Добавить операцию" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>