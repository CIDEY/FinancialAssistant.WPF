<Window
    x:Class="FinancialAssistant.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FinancialAssistant"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:FinancialAssistant.ViewModels"
    Title="FinancialAssistant - Authorization"
    Width="1000"
    Height="650"
    d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="50"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!--  Стили для кнопок управления окном  -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#6B7280" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse
                                x:Name="Background"
                                Fill="{TemplateBinding Background}"
                                Stroke="Transparent" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="Fill" Value="#F3F4F6" />
                                <Setter Property="Foreground" Value="#1F2937" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Semibold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="25,12" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        Opacity="0.2"
                        ShadowDepth="3" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border
            Margin="20"
            Background="White"
            CornerRadius="20">
            <Grid>
                <StackPanel
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Button Click="CloseButton_Click" Style="{StaticResource WindowControlButton}">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Kind="Close" />
                    </Button>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Левая панель  -->
                    <Border
                        Grid.Column="0"
                        Background="#6366F1"
                        CornerRadius="20 0 0 20">
                        <Grid>
                            <Path
                                Data="M100,0 L0,200 200,200"
                                Fill="#4F46E5"
                                Opacity="0.1"
                                Stretch="UniformToFill" />
                            <StackPanel Margin="40" VerticalAlignment="Center">
                                <materialDesign:PackIcon
                                    Width="80"
                                    Height="80"
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    Kind="Finance" />
                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="FinancialAssistant"
                                    TextAlignment="Center" />
                                <TextBlock
                                    FontSize="18"
                                    Foreground="#EEF2FF"
                                    Opacity="0.9"
                                    Text="Контролируйте свои финансы"
                                    TextAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid x:Name="LoginPanel" Grid.Column="1">
                        <StackPanel Margin="60,40" VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,40"
                                FontSize="32"
                                FontWeight="Bold"
                                Foreground="#1F2937"
                                Text="С возвращением" />
                            <TextBox
                                Margin="0,0,0,25"
                                materialDesign:HintAssist.Hint="Логин"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" />
                            <PasswordBox
                                Margin="0,0,0,35"
                                materialDesign:HintAssist.Hint="Пароль"
                                FontSize="16"
                                PasswordChanged="PasswordBox_PasswordChanged" />
                            <Button
                                Height="50"
                                Background="#6366F1"
                                Command="{Binding LoginToCommand}"
                                Content="Войти"
                                Cursor="Hand"
                                FontSize="16" />
                            <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center">
                                <Run Text="Новичок в FinancialAssistant? " />
                                <Hyperlink
                                    Click="CreateAccount_Click"
                                    FontWeight="SemiBold"
                                    Foreground="#6366F1"
                                    TextDecorations="None">
                                    Создать аккаунт
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <Grid
                        x:Name="RegisterPanel"
                        Grid.Column="1"
                        Visibility="Collapsed">
                        <StackPanel Margin="60,40" VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,40"
                                FontSize="32"
                                FontWeight="Bold"
                                Foreground="#1F2937"
                                Text="Создать учетную запись" />
                            <TextBox
                                Margin="0,0,0,25"
                                materialDesign:HintAssist.Hint="Логин"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox
                                Margin="0,0,0,25"
                                materialDesign:HintAssist.Hint="Адрес электронной почты"
                                FontSize="16"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                            <PasswordBox
                                Margin="0,0,0,35"
                                materialDesign:HintAssist.Hint="Пароль"
                                FontSize="16"
                                PasswordChanged="PasswordBox_PasswordChanged" />
                            <Button
                                Height="50"
                                Background="#6366F1"
                                Command="{Binding RegisterCommand}"
                                Content="Зарегистрироваться"
                                Cursor="Hand"
                                FontSize="16" />
                            <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center">
                                <Run Text="У вас уже есть аккаунт? " />
                                <Hyperlink
                                    Click="BackToLogin_Click"
                                    FontWeight="SemiBold"
                                    Foreground="#6366F1"
                                    TextDecorations="None">
                                    Войти
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
