<Window
    x:Class="FinancialAssistant.WindowsStart.StartWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FinancialAssistant.WindowsStart"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FinancialAssistant - StartWindow"
    Width="1500"
    Height="950"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="50"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!--  Стили для кнопок управления окном  -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#6B7280" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse
                                x:Name="Background"
                                Fill="{TemplateBinding Background}"
                                Stroke="Transparent" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="Fill" Value="#F3F4F6" />
                                <Setter Property="Foreground" Value="#1F2937" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Стиль для кнопок навигации  -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="20,15" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="Border"
                            Background="Transparent"
                            CornerRadius="10">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4F46E5" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#4F46E5" />
                                <Setter Property="Foreground" Value="#E0E7FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border
            Margin="20"
            Background="White"
            CornerRadius="20">
            <Grid>
                <!--  Панель управления окном  -->
                <StackPanel
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Button Style="{StaticResource WindowControlButton}">
                        <!--Click="MinimizeButton_Click"-->
                        <materialDesign:PackIcon Kind="WindowMinimize" />
                    </Button>
                    <Button Style="{StaticResource WindowControlButton}">
                        <!--Click="CloseButton_Click"-->
                        <materialDesign:PackIcon Kind="Close" />
                    </Button>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Боковая панель  -->
                    <Border
                        Grid.Column="0"
                        Background="#6366F1"
                        CornerRadius="20 0 0 20">
                        <Grid>
                            <Path
                                Data="M100,0 L0,200 200,200"
                                Fill="#4F46E5"
                                Opacity="0.1"
                                Stretch="UniformToFill" />

                            <StackPanel Margin="20" VerticalAlignment="Top">
                                <StackPanel Margin="0,20,0,40" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon
                                        Width="40"
                                        Height="40"
                                        Foreground="White"
                                        Kind="PiggyBank" />
                                    <TextBlock
                                        Margin="0,10,0,0"
                                        FontSize="19"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Финансовый помощник"
                                        TextAlignment="Center" />
                                </StackPanel>

                                <StackPanel>
                                    <Button Style="{StaticResource NavButton}" Tag="HomeView">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Kind="Home" />
                                            <TextBlock VerticalAlignment="Center" Text="Главная" />
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource NavButton}" Tag="TransactionsView">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Kind="Cash" />
                                            <TextBlock VerticalAlignment="Center" Text="Операции" />
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource NavButton}" Tag="ReportsView">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Kind="ChartAreaspline" />
                                            <TextBlock VerticalAlignment="Center" Text="Отчеты" />
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource NavButton}" Tag="SettingsView">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Kind="Cog" />
                                            <TextBlock VerticalAlignment="Center" Text="Настройки" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Основная область контента  -->
                    <Border Grid.Column="1" Background="#F9FAFB">
                        <ContentControl Margin="20" Content="{Binding CurrentPage}" />
                        <!--  ContentTemplateSelector="{StaticResource PageTemplateSelector}"  -->
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>