<Application
    x:Class="FinancialAssistant.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FinancialAssistant"
    StartupUri="WindowsStart/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Обязательная базовая тема  -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />

                <!--  Стили по умолчанию  -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

                <!--  Цветовые схемы  -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Indigo.xaml" />
                <!--<ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Blue.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>

            <!--  Глобальные стили шрифтов  -->
            <Style TargetType="{x:Type TextElement}">
                <Setter Property="FontFamily" Value="pack://application:,,,/FinancialAssistant;component/Fonts/#Roboto" />
            </Style>

            <Style TargetType="{x:Type Control}">
                <Setter Property="FontFamily" Value="pack://application:,,,/FinancialAssistant;component/Fonts/#Roboto" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
